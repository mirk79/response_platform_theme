#
# BACKENDLAYOUT: Page - Sub Page
#
mod {
    web_layout {
        BackendLayouts {
            page_sub {
                title = LLL:EXT:response_platform_theme/Resources/Private/Language/locallang_be.xlf:backend_layout.page.sub
                config {
                    backend_layout {
                        colCount = 1
                        rowCount = 1
                        rows {
                            1 {
                                columns {
                                    1 {
                                        name = LLL:EXT:response_platform_theme/Resources/Private/Language/locallang_be.xlf:backend_layout.page.content
                                        colPos = 0
                                        allowed {
                                            CType < lib.allowedContent
                                        }
                                    }
                                }
                            }
                        }
                    }
                }
                icon = EXT:response_platform_theme/Resources/Public/Img/BackendLayouts/BE-Layout-Page-Sub.png
            }
        }
    }
}
